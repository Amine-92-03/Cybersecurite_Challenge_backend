<%- include('layout/header') %>
<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-8">
        <h4 class="font-weight-bold">Tous les Joueurs</h4>
      </div>
      <div class="col-4">
        <a href="/addUser" class="btn btn-success float-right"
          ><i class="fa fa-plus mr-1"></i>Ajouter nouveau</a
        >
      </div>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-hover">
      <thead class="table-dark">
        <tr>
          <th scope="col">Nom du joueur</th>
          <th scope="col">E-mail</th>
          <th scope="col">Age</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% if(users.length > 0) { %> <% for(let user of users) { %>
        <tr>
          <th scope="row"><%= user.firstName %> <%= user.lastName %></th>
          <td><%= user.email %></td>
          <td><%= user.age %></td>
          <td>
            <a
              href="/updateCustomer/<%= user._id %>"
              class="btn btn-sm btn-warning"
              ><i class="fa fa-edit"></i
            ></a>
            <a
              href="/deleteCustomer/<%= user._id %>"
              class="btn btn-sm btn-danger"
              ><i class="fa fa-trash"></i
            ></a>
          </td>
        </tr>
        <% } %> <% } else { %>
        <tr>
          <td>No data found</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('layout/footer') %>
