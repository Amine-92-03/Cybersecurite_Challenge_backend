<%- include('layout/header') %>
<div class="container-fluid">
  <!-- <div class="card">
      <div class="card-header"> -->
  <div class="row m-2">
    <div class="col-8 Justify-content-around">
      <h4 class="font-weight-bold">Tous les Joueurs</h4>
    </div>
    <div class="col-4">
      <a href="/addUser" class="btn btn-success float-right"
        ><i class="fa fa-plus mr-1"></i>Ajouter nouveau</a
      >
    </div>
  </div>

  <div class="row m-4">
    <div class="col table-responsive">
      <table id="myTable">
        <thead>
          <tr>
            <th>Nom du joueur</th>
            <th>E-mail</th>
            <th>Ã‚ge</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if(users.length > 0) { %> <% for(let user of users) { %>
          <tr>
            <th scope="row"><%= user.firstName %> <%= user.lastName %></th>
            <td><%= user.email %></td>
            <td><%= user.age %></td>
            <td>
              <a
                href="/updateUser/?id_user=<%= user._id %>"
                class="btn btn-sm btn-warning m-1"
                ><i class="fa fa-edit"></i
              ></a>
              <a
                href="/deleteUser/?id_user=<%= user._id %>"
                class="btn btn-sm btn-danger m-1"
                ><i class="fa fa-trash"></i
              ></a>
            </td>
          </tr>
          <% } %> <% } else { %>
          <tr>
            <td>No data found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('layout/footer') %>
